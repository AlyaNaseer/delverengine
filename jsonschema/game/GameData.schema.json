{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Game Data",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "tutorialLevel": {
            "$ref": "Level.schema.json"
        },
        "entityDataFiles": {
            "type": "array",
            "default": ["entities.dat"],
            "description": "Filepaths of entity data.",
            "items": {
                "type": "string"
            }
        },
        "monsterDataFiles": {
            "type": "array",
            "default": ["monsters.dat"],
            "description": "Filepaths of monster data.",
            "items": {
                "type": "string"
            }
        },
        "itemDataFiles": {
            "type": "array",
            "default": ["items.dat"],
            "description": "Filepaths of item data.",
            "items": {
                "type": "string"
            }
        },
        "playerDataFile": {
            "type": "string",
            "default": "player.dat",
            "description": "Filepath of player data."
        },
        "playerJumpEnabled": {
            "type": "boolean",
            "default": false,
            "description": "Is player allowed to jump."
        }
    },
    "required": [
        "entityDataFiles",
        "monsterDataFiles",
        "itemDataFiles",
        "playerDataFile"
    ],
    "patternProperties": {},
    "dependencies": {}
}